{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-and-run",
      "type": "shell",
      "command": "g++ ${file} -o main && ./main < input.txt > output.txt",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
