{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-run",
            "type": "shell",
            "command": "g++ -std=gnu++17 ${file} -Dlav1sh -g -o run.out && ./run.out",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}